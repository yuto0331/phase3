<div class="container">
  <p id="notice"><%= notice %></p>
  
  <p>
    <strong>投稿者:</strong>
    <%= @picture.user.name %>
  </p>
  
  <p>
    <strong>コメント:</strong>
    <%= @picture.content %>
  </p>
  
  <p>
    <%= image_tag @picture.image %>
  </p>
  
  <% unless @picture.user == current_user %>
    <% if @favorite.present? %>
      <%= link_to 'お気に入り解除する', favorite_path(picture_id: @picture.id), method: :delete, class: 'btn' %>
    <% else %>
      <%= link_to 'お気に入りする', favorites_path(picture_id: @picture.id), method: :post, class: 'btn' %>
    <% end %>
  <% end %>
  
  
  <% if @picture.user == current_user %>
  <%= link_to '編集する', edit_picture_path(@picture), class: 'btn' %>
  <%= link_to '削除', pictures_path(@picture), method: :delete, data: { confirm: '削除していいですか？' }, class: 'btn' %>
  <% end %>
  
  <!--<%= link_to 'Back', pictures_path %>-->
</div>