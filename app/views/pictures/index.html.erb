<p id="notice"><%= notice %></p>

<div class="container">
  <h1>一覧</h1>
  
  <table>
    <thead>
      <tr>
        <th>投稿者</th>
        <th>コメント</th>
        <th>画像情報</th>
      </tr>
    </thead>
  
    <tbody>
      <% @pictures.each do |picture| %>
        <tr>
          <td><%= picture.user.name %></td>
          <td><%= picture.content %></td>
          <!--[塩井]画像を表示する場合はimage_tagヘルパーが使えます！-->
          <td><%= link_to image_tag(picture.image, class: 'logo'), picture %></td>
          <!--<td><%= link_to '詳細', picture %></td>-->
          <% if picture.user_id == current_user.id %>
          <td><%= link_to '削除', picture, method: :delete, data: { confirm: '削除していいですか？' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>

<%= link_to '新規投稿', new_picture_path, class: 'btn' %>

</div>